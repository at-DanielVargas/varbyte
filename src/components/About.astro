---
import { getLangFromUrl, useTranslations } from "../i18n/utils";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const skills = [
  "JavaScript/TypeScript",
  "React.js",
  "Angular",
  "Node.js",
  "PHP",
  "Git",
  "SQL",
  "HTML/CSS",
  "REST APIs",
];
---

<section id="about" class="py-20 px-6 bg-gray-50">
  <div class="max-w-4xl mx-auto">
    <div class="animate-slide-up">
      <div class="font-mono text-sm text-gray-500 mb-4">
        {t("about.comment")}
      </div>
      <h2 class="font-mono text-3xl md:text-4xl font-bold mb-12">
        {t("nav.about")}
      </h2>

      <div class="grid md:grid-cols-2 gap-12">
        <div>
          <div
            class="font-mono text-lg text-gray-700 space-y-6 leading-relaxed"
          >
            <p>
              {t("about.description.one")}
            </p>
            <p>
              {t("about.description.two")}
            </p>

            <p>{t("about.interested")}</p>
            <a
              href={`/cv-${lang}.pdf`}
              download
              class="font-mono w-full bg-black text-white py-3 px-6 hover:bg-gray-800 transition-colors block text-center"
            >
              {t("about.getcv.button")}
            </a>
          </div>
        </div>

        <div>
          <h3 class="font-mono text-xl font-semibold mb-6">
            {"skills: ["}
          </h3>
          <div class="grid grid-cols-2 gap-3">
            {
              skills.map((skill, index) => (
                <div
                  class="font-mono text-sm bg-white p-3 border border-gray-200 hover:border-gray-400 transition-colors"
                  style={{ animationDelay: `${index * 0.1}s` }}
                >
                  "'{skill}'"
                </div>
              ))
            }
          </div>
          <div class="font-mono text-xl mt-6">
            {"]"}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
